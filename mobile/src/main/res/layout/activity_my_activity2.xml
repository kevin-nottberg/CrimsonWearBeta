<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kevinnottberg.crimsonwearproj.AddDotAct">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Dot"
        android:id="@+id/dotTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Id:"
        android:id="@+id/idText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dotTitle"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idTextField"
        android:layout_below="@+id/dotTitle"
        android:layout_toRightOf="@+id/idText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Set Count:"
        android:id="@+id/setCountText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idText"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setCountTextField"
        android:layout_below="@+id/idText"
        android:layout_toRightOf="@+id/setCountText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Side:"
        android:id="@+id/sideText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setCountText"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideTextField"
        android:layout_below="@+id/setCountText"
        android:layout_toRightOf="@+id/sideText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Horizontal:"
        android:id="@+id/horizText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sideText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizTextField"
        android:layout_below="@+id/sideText"
        android:layout_toRightOf="@+id/horizText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Horizontal Direction:"
        android:id="@+id/horizdirText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizdirTextField"
        android:layout_below="@+id/horizText"
        android:layout_toRightOf="@+id/horizdirText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Horizontal Step:"
        android:id="@+id/horizStepText"
        android:layout_alignParentStart="true"
        android:layout_below="@id/horizdirText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizStepTextField"
        android:layout_below="@id/horizdirText"
        android:layout_toRightOf="@+id/horizStepText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vertical:"
        android:id="@+id/vertText"
        android:layout_alignParentStart="true"
        android:layout_below="@id/horizStepText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertTextField"
        android:layout_below="@+id/horizStepText"
        android:layout_toRightOf="@id/vertText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vertical Direction:"
        android:id="@+id/vertdirText"
        android:layout_alignParentStart="true"
        android:layout_below="@id/vertText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertdirTextField"
        android:layout_below="@+id/vertText"
        android:layout_toRightOf="@id/vertdirText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vertical Step:"
        android:id="@+id/vertStepText"
        android:layout_alignParentStart="true"
        android:layout_below="@id/vertdirText"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vertStepTextField"
        android:layout_below="@+id/vertdirText"
        android:layout_toRightOf="@id/vertStepText"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done and Add"
        android:textStyle="bold"
        android:id="@+id/doneButton"
        android:layout_below="@+id/vertStepTextField"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textStyle="bold"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/vertStepTextField"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
